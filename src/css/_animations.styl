.order-enter
  max-height 0
  transition .5s
  padding 0 !important
  transform translateX(-120%)
  &.order-enter-active
    max-height 60px
    transform translateX(0)
    padding 2rem 0 !important

.order-exit
  transition .5s
  transform translateX(0)
  &.order-exit-active
    transform translateX(120%)
    

.count-enter 
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  left 0
  bottom 0
  transition .5s
  position absolute
  transform translateY(0)
  &.count-exit-active 
    transform translateY(-100%)